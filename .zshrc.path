# rbenv
if [ -d ${HOME}/.rbenv ] ; then
    export PATH=$HOME/.rbenv/bin:$PATH
    eval "$(rbenv init -)"
    source ~/.rbenv/completions/rbenv.zsh
fi

# plenv
if [ -d ${HOME}/.plenv  ] ; then
    export PATH=$HOME/.plenv/bin:$PATH
    eval "$(plenv init -)"
    source ~/.plenv/completions/plenv.zsh
fi

