alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias time='/usr/bin/time -p'

alias history='history -i'

autoload -Uz zmv
alias zmv='noglob zmv -W'

# tmux
alias tmux-changekey='tmux set-option -g prefix C-q'
alias tmux-revertkey='tmux set-option -g prefix C-z'

alias e='emacsclient'

if [[ -x `which colordiff` ]]; then
  alias diff='colordiff -u'
else
  alias diff='diff -u'
fi

# 色表示に対応・パーセンテージ表示
export LESS='-MR'
