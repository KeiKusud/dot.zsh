# TeX -> PDF 一発変換
function textopdf(){
  file=$1
  if platex $file
  then
    echo "\n--platex exit--\n"
    if dvipdfmx ${file%tex}dvi
    then
      echo "\n--dvipdfmx exit--\n"
    else
      echo "Look ${file%tex}log"
    fi
  fi
}

